{      
  "compilerOptions": {
    "target": "ES2016",                   
    "module": "commonjs",                 
    "sourceMap": true,                    
    "outDir": "dist",                      
    "resolveJsonModule": true,                     
    "strict": true,                          
    "noImplicitAny": true,                
    "moduleResolution": "node",           
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}